@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container mt-5">

    <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
            <a asp-controller="Category" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-tags fs-1 mb-2"></i>
                        <h5 class="card-title">Categories</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Product" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-box fs-1 mb-2"></i>
                        <h5 class="card-title">Products</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="InventoryTransaction" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-arrow-left-right fs-1 mb-2"></i>
                        <h5 class="card-title">Inventory Transactions</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="StockLevel" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-graph-up fs-1 mb-2"></i>
                        <h5 class="card-title">Stock Levels</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Store" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-shop fs-1 mb-2"></i>
                        <h5 class="card-title">Stores</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="Unit" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-rulers fs-1 mb-2"></i>
                        <h5 class="card-title">Units</h5>
                    </div>
                </div>
            </a>
        </div>

        <div class="col">
            <a asp-controller="User" asp-action="Index" class="text-decoration-none">
                <div class="card h-100 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-people fs-1 mb-2"></i>
                        <h5 class="card-title">Users</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>
</div>
