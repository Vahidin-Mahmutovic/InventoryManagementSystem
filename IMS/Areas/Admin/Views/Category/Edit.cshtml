@model IMS.Models.Category

<div class="container mt-4">

    <h2>Edit Category</h2>

    <form asp-controller="Category" asp-action="Edit" method="post" class="needs-validation" novalidate>
        @Html.AntiForgeryToken()

        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-info">Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
