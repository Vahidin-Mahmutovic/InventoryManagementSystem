@model IEnumerable<IMS.Models.InventoryTransaction>

@{
    ViewData["Title"] = "Inventory Transactions";
}

<div class="container mt-4 pb-5">
    <div class="d-flex justify-content-between align-items-center mb-3">

        <h2 class="text-primary mb-0">@ViewData["Title"]</h2>

        <a asp-controller="InventoryTransaction" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Transaction

        </a>
    </div>

    <table class="table table-bordered table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Product</th>
                <th>Store</th>
                <th>Type</th>
                <th>Quantity</th>
                <th>Note</th>
                <th>Performed By</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@item.Product?.Name</td>
                    <td>@item.Store?.Name</td>
                    <td>@item.TransactionType.ToString()</td>
                    <td>@item.Quantity</td>
                    <td>@item.Note</td>
                    <td>@item.PerformedBy</td>
                </tr>
            }
        </tbody>
    </table>
</div>
