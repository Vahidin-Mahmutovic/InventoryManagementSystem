@model IEnumerable<IMS.Models.ViewModels.UserVM>

@{
    ViewData["Title"] = "Users";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-3">

        <h2 class="mb-0">@ViewData["Title"]</h2>

        <a asp-controller="User" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create New User
        </a>

    </div>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Role</th>
                <th style="width: 170px; text-align: center;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>
                        <div class="d-flex gap-3 justify-content-center">
                            <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-info d-inline-flex align-items-center">
                                <i class="bi bi-pencil-square me-1"></i> Edit
                            </a>
                            <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger d-inline-flex align-items-center">
                                <i class="bi bi-trash-fill me-1"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
