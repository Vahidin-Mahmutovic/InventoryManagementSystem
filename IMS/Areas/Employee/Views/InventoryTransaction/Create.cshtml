@model IMS.Models.ViewModels.InventoryTransactionVM

@{
    ViewData["Title"] = "Create Inventory Transaction";
}

<div class="container mt-4 pb-5">
    @Html.AntiForgeryToken()
    <h2>@ViewData["Title"]</h2>

    <form method="post">

        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="mb-3">
            <label asp-for="ProductId" class="form-label"></label>
            <select asp-for="ProductId" asp-items="Model.Products" class="form-select">
                <option value="">-- Select Product --</option>
            </select>
            <span asp-validation-for="ProductId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StoreId" class="form-label"></label>
            <select asp-for="StoreId" asp-items="Model.Stores" class="form-select">
                <option value="">-- Select Store --</option>
            </select>
            <span asp-validation-for="StoreId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TransactionType" class="form-label"></label>
            <select asp-for="TransactionType" asp-items="Model.TransactionTypes" class="form-select">
                <option value="">-- Select Type --</option>
            </select>
            <span asp-validation-for="TransactionType" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Quantity" class="form-label"></label>
            <input asp-for="Quantity" class="form-control" type="number" min="1" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Note" class="form-label"></label>
            <textarea asp-for="Note" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="PerformedBy" class="form-label"></label>
            <input asp-for="PerformedBy" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="InventoryTransaction" asp-action="Index" class="btn btn-secondary ms-2">Back to List</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
